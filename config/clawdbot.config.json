{
  "$schema": "https://clawdbot.dev/schema/config.json",
  "version": "1.0.0",
  "name": "OrangePi-IA-Agent",
  "description": "Agente de IA local para Orange Pi 5 Plus",
  
  "llm": {
    "provider": "ollama",
    "model": "llama3.1:8b",
    "baseUrl": "http://localhost:11434",
    "temperature": 0.7,
    "maxTokens": 4096,
    "timeout": 120000,
    "retries": 3,
    "fallback": {
      "provider": "ollama",
      "model": "phi3:mini"
    }
  },

  "gateway": {
    "port": 18789,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:*", "http://192.168.*.*:*"]
    }
  },

  "dashboard": {
    "enabled": true,
    "theme": "dark",
    "language": "pt-BR"
  },

  "security": {
    "authentication": {
      "enabled": false,
      "type": "password",
      "password": ""
    },
    "allowedIPs": ["127.0.0.1", "192.168.0.0/16", "10.0.0.0/8"],
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 60000
    },
    "commandBlacklist": [
      "rm -rf /",
      "mkfs",
      "dd if=/dev/zero",
      ":(){:|:&};:",
      "chmod -R 777 /",
      "mv /* /dev/null"
    ]
  },

  "logging": {
    "level": "info",
    "format": "json",
    "file": {
      "enabled": true,
      "path": "./logs/clawdbot.log",
      "maxSize": "10m",
      "maxFiles": 5
    },
    "console": {
      "enabled": true,
      "colorize": true
    }
  },

  "memory": {
    "shortTerm": {
      "maxMessages": 50,
      "ttl": 3600
    },
    "longTerm": {
      "enabled": true,
      "provider": "file",
      "path": "./data/memory"
    }
  },

  "scheduling": {
    "enabled": true,
    "timezone": "America/Sao_Paulo",
    "jobs": []
  },

  "monitoring": {
    "enabled": true,
    "interval": 60,
    "alerts": {
      "cpuThreshold": 80,
      "memoryThreshold": 85,
      "diskThreshold": 90,
      "temperatureThreshold": 70
    }
  },

  "orangePi": {
    "model": "5 Plus",
    "ram": "32GB",
    "features": {
      "gpio": true,
      "npu": true,
      "fan": true
    }
  }
}
