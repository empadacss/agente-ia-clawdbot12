{
  "$schema": "https://clawdbot.dev/schema/skills.json",
  "version": "1.0.0",
  
  "skills": {
    "system-monitor": {
      "enabled": true,
      "name": "Monitoramento do Sistema",
      "description": "Monitora CPU, RAM, disco, temperatura e processos",
      "permissions": ["read"],
      "module": "./skills/system-monitor.js",
      "config": {
        "refreshInterval": 30,
        "alertsEnabled": true
      }
    },
    
    "file-manager": {
      "enabled": true,
      "name": "Gerenciador de Arquivos",
      "description": "Lista, cria, edita e remove arquivos e diretórios",
      "permissions": ["read", "write"],
      "module": "./skills/file-manager.js",
      "config": {
        "allowedPaths": ["/home", "/tmp", "/var/log"],
        "blockedPaths": ["/etc/shadow", "/etc/passwd", "/root/.ssh"],
        "maxFileSize": "50MB"
      }
    },
    
    "shell-executor": {
      "enabled": true,
      "name": "Executor de Comandos Shell",
      "description": "Executa comandos no terminal",
      "permissions": ["execute"],
      "module": "builtin:shell",
      "config": {
        "timeout": 60000,
        "maxOutputSize": "1MB",
        "allowSudo": false,
        "blockedCommands": [
          "rm -rf /",
          "mkfs",
          "dd if=/dev/zero",
          "shutdown",
          "reboot",
          "halt",
          "poweroff"
        ]
      }
    },
    
    "network-tools": {
      "enabled": true,
      "name": "Ferramentas de Rede",
      "description": "Ping, DNS lookup, informações de rede, verificação de portas",
      "permissions": ["read", "network"],
      "module": "./skills/network-tools.js",
      "config": {
        "allowExternalRequests": true,
        "timeout": 10000
      }
    },
    
    "gpio-control": {
      "enabled": true,
      "name": "Controle de GPIO",
      "description": "Controla pinos GPIO da Orange Pi",
      "permissions": ["hardware"],
      "module": "./skills/gpio-control.js",
      "config": {
        "availablePins": [3, 5, 7, 8, 10, 11, 12, 13, 15, 16, 18, 19, 21, 22, 23, 24, 26],
        "defaultMode": "output"
      }
    },
    
    "service-manager": {
      "enabled": true,
      "name": "Gerenciador de Serviços",
      "description": "Gerencia serviços systemd",
      "permissions": ["execute", "admin"],
      "module": "builtin:systemd",
      "config": {
        "allowedServices": [
          "nginx",
          "apache2",
          "mysql",
          "postgresql",
          "docker",
          "clawdbot",
          "ollama"
        ],
        "blockedActions": ["mask", "unmask"]
      }
    },
    
    "package-manager": {
      "enabled": false,
      "name": "Gerenciador de Pacotes",
      "description": "Instala e atualiza pacotes via apt",
      "permissions": ["admin"],
      "module": "builtin:apt",
      "config": {
        "allowInstall": false,
        "allowRemove": false,
        "allowUpgrade": true
      }
    },
    
    "docker-manager": {
      "enabled": false,
      "name": "Gerenciador Docker",
      "description": "Gerencia containers Docker",
      "permissions": ["docker"],
      "module": "builtin:docker",
      "config": {
        "allowPrivileged": false
      }
    },
    
    "backup-manager": {
      "enabled": true,
      "name": "Gerenciador de Backup",
      "description": "Cria e restaura backups de arquivos e diretórios",
      "permissions": ["read", "write"],
      "module": "./skills/backup-manager.js",
      "config": {
        "backupPath": "/home/backups",
        "compression": "gzip",
        "maxBackups": 10
      }
    },
    
    "cron-manager": {
      "enabled": true,
      "name": "Agendador de Tarefas",
      "description": "Gerencia tarefas agendadas via cron",
      "permissions": ["execute"],
      "module": "builtin:cron",
      "config": {
        "userCron": true,
        "systemCron": false
      }
    }
  },
  
  "permissions": {
    "read": {
      "description": "Permite leitura de arquivos e informações do sistema",
      "risk": "low"
    },
    "write": {
      "description": "Permite escrita e modificação de arquivos",
      "risk": "medium"
    },
    "execute": {
      "description": "Permite execução de comandos e scripts",
      "risk": "high"
    },
    "network": {
      "description": "Permite acesso à rede e requisições externas",
      "risk": "medium"
    },
    "hardware": {
      "description": "Permite acesso a hardware (GPIO, sensores)",
      "risk": "medium"
    },
    "admin": {
      "description": "Permite operações administrativas do sistema",
      "risk": "critical"
    },
    "docker": {
      "description": "Permite gerenciamento de containers Docker",
      "risk": "high"
    }
  }
}
