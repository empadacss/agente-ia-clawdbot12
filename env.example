# ============================================
# CLAUDE AGENT - CONFIGURAÇÃO
# ============================================

# ============================================
# ANTHROPIC (OBRIGATÓRIO)
# ============================================

# Sua API Key da Anthropic
# Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo do Claude (opcional)
# Opções: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# TELEGRAM (OBRIGATÓRIO)
# ============================================

# Token do bot (obtido com @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ

# IDs dos usuários permitidos (separados por vírgula)
# Descubra seu ID enviando /start para @userinfobot
TELEGRAM_ALLOWED_CHAT_ID=123456789

# ============================================
# AGENTE (OPCIONAL)
# ============================================

# Número máximo de iterações por mensagem
MAX_ITERATIONS=25

# Tokens máximos por resposta
MAX_TOKENS=8192

# ============================================
# DISPLAY (PARA COMPUTER USE)
# ============================================

# Display X11 (geralmente :0)
DISPLAY=:0

# ============================================
# PUPPETEER (BROWSER)
# ============================================

# Caminho do Chromium
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Não baixar Chromium (usar do sistema)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
