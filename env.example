# ============================================
# Configuração do Agente de IA - ClawdBot
# ============================================
# Copie este arquivo para .env e preencha os valores
# cp env.example .env

# --------------------------------------------
# CONFIGURAÇÃO DO MODELO DE IA
# --------------------------------------------

# Provedor de IA: ollama, anthropic, openai
LLM_PROVIDER=ollama

# Modelo a ser usado
# Para Ollama: llama3.1:8b, mistral:7b, qwen2:7b, phi3:mini
# Para Anthropic: claude-3-opus, claude-3-sonnet
# Para OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
LLM_MODEL=llama3.1:8b

# URL base do Ollama (apenas se usar Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# API Key da Anthropic (apenas se usar Claude)
ANTHROPIC_API_KEY=

# API Key da OpenAI (apenas se usar GPT)
OPENAI_API_KEY=

# --------------------------------------------
# CONFIGURAÇÃO DO CLAWDBOT
# --------------------------------------------

# Porta do gateway
CLAWDBOT_PORT=18789

# Nível de log: debug, info, warn, error
LOG_LEVEL=info

# Limite de memória Node.js (em MB)
NODE_MAX_MEMORY=4096

# --------------------------------------------
# INTEGRAÇÕES
# --------------------------------------------

# Telegram Bot Token (obtenha com @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID autorizado (seu ID pessoal)
TELEGRAM_ALLOWED_CHAT_ID=

# WhatsApp (configurado via QR code no onboarding)
WHATSAPP_ENABLED=false

# Discord Bot Token
DISCORD_BOT_TOKEN=

# Discord Server ID autorizado
DISCORD_ALLOWED_SERVER_ID=

# --------------------------------------------
# SEGURANÇA
# --------------------------------------------

# Senha para acessar o dashboard (deixe vazio para desabilitar)
DASHBOARD_PASSWORD=

# IPs permitidos para acessar o dashboard (separados por vírgula)
# Deixe vazio para permitir apenas localhost
ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# Habilitar modo de apenas leitura (sem execução de comandos)
READ_ONLY_MODE=false

# --------------------------------------------
# MONITORAMENTO
# --------------------------------------------

# Intervalo de health check em segundos
HEALTH_CHECK_INTERVAL=60

# Temperatura máxima da CPU antes de alertar (em °C)
CPU_TEMP_ALERT_THRESHOLD=70

# Uso máximo de RAM antes de alertar (em %)
RAM_USAGE_ALERT_THRESHOLD=85

# Uso máximo de disco antes de alertar (em %)
DISK_USAGE_ALERT_THRESHOLD=90

# --------------------------------------------
# ORANGE PI ESPECÍFICO
# --------------------------------------------

# Habilitar controle de GPIO
GPIO_ENABLED=true

# Habilitar controle de ventilador
FAN_CONTROL_ENABLED=true

# Temperatura alvo para o ventilador (em °C)
FAN_TARGET_TEMP=50
